{
    "name":        "ebidtech/cache-client",
    "description": "Multi provider cache service",
    "license":     "MIT",
    "homepage":    "https://github.com/ebidtech/cache-client",
    "type":        "library",
    "keywords":    ["cache", "memory", "redis", "memcached"],
    "require": {
        "php":                       ">=5.4.0",
        "psr/log":                   "1.0.0",
        "symfony/options-resolver":  "2.7.*",
        "predis/predis":             "1.0.*",
        "ebidtech/ebt-validator":    "1.2.*"
    },
    "require-dev": {
        "phpunit/phpunit":           "4.7.*",
        "nikic/php-parser":          "1.3.*",
        "squizlabs/php_codesniffer": "2.3.*"
    },
    "scripts": {
        "post-install-cmd": [
            "bash ./tools/install-codesniffer.sh"
        ]
    },
    "autoload": {
        "psr-0": {
            "EBT\\CacheClient": "src/"
        }
    },
    "minimum-stability": "stable"
}
